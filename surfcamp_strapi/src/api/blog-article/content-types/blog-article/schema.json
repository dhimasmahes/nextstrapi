{
  "kind": "collectionType",
  "collectionName": "blog_articles",
  "info": {
    "singularName": "blog-article",
    "pluralName": "blog-articles",
    "displayName": "Blog Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "headline": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:(?:-|_)+[a-z0-9]+)*$"
    },
    "featuredImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "isHighlightArticle": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    }
  }
}
